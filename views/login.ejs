<!-- views/login.ejs -->
<!doctype html>
<html lang ="en">
  <head>
      <title>Login to Countdown</title>
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

      <!--Import materialize.css-->
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

      <!--Styles-->
      <link href="/index.css" rel="stylesheet" type="text/css">

      <!--Fonts-->
      <link href="https://fonts.googleapis.com/css?family=Fira+Sans" rel="stylesheet">

      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

      <meta charset="utf-8">

  </head>
  <body>
    <main role="main">
      <div class="container">

        <div class="row">
          <div class="col s12">
            <h1>Login</h1>

            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <!-- LOGIN FORM -->
            <fieldset>
              <legend>Login</legend>
              <form action="/login" method="post">

                <label>Email</label>
                <input type="email" class="login-form" name="email" required>

                <label>Password</label>
                <input type="password" class="login-form" name="password" required>

                <button type="submit" class="btn green darken-2"><i class="material-icons left">lock_open</i>Login</button>
              </form>
            </fieldset>

            <br>

            <p>Need an account? <a href="/signup">Signup</a></p>
            <p>Or return <a href="/">home</a>.</p>
          </div>

        </div>

      </div>
    </main>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </body>
</html>
