<!-- views/signup.ejs -->
<!doctype html lang="en">
<html>
  <head>
      <title>Countdown Signup</title>

      <!--Icons-->
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

      <!--Import materialize.css-->
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

      <!--Styles-->
      <link href="/index.css" rel="stylesheet" type="text/css">

      <!--Fonts-->
      <link href="https://fonts.googleapis.com/css?family=Fira+Sans" rel="stylesheet">

      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
      <meta charset="utf-8">

  </head>
  <body>
    <main role="main">
      <div class="container">

            <h1>Signup</h1>

            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <!-- LOGIN FORM -->
            <fieldset>
              <legend>
                Sign up
              </legend>
              <form action="/signup" method="post">

                <label for="signup-form">Email</label>
                <input aria-label="E-mail" type="text" class="signup-form" name="email">

                <label>Password</label>
                <input aria-label="password" type="password" class="signup-form" name="password">

                <button aria-label="submit signup form" type="submit" class="btn green darken-2"><i class="material-icons left">create</i>Signup</button>
              </form>
            </fieldset>

            <br>

            <p>Already have an account? <a href="/login">Login</a></p>

      </div>
    </main>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </body>
</html>
